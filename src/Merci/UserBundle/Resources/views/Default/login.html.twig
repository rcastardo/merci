{% extends '::base.html.twig' %}

{% block title %}
    Login{{ parent() }}
{% endblock %}

{% block body %}
    <div class="container">
        <h1>Login</h1>

        <div class="row">
            <div class="col-md-5">
                {% if error %}
                    <div class="alert alert-danger">{{ error.message }}</div>
                {% endif %}
                <div class="panel panel-default">
                    <div class="panel-body">
                        <form action="{{ path('login_check') }}" method="post" class="form-horizontal" role="form">
                            <div class="form-group">
                                <label class="col-lg-2 control-label">E-mail</label>
                                <div class="col-lg-10">
                                    <input type="text" name="_username" value="{{ last_username }}" class="form-control" placeholder="username">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-lg-2 control-label">Senha</label>
                                <div class="col-lg-10">
                                    <input type="password" name="_password" class="form-control" placeholder="Password">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-lg-offset-2 col-lg-10">
                                    <button type="submit" class="btn btn-default">Entrar</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="panel panel-default">
                    <div class="panel-heading">Faça seu cadastro para finalizar sua compra</div>
                    <div class="panel-body text-center">
                        <a href="{{ path('register') }}" type="button" class="btn btn-primary btn-lg">Cadastre-se</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    </div>
{% endblock %}